{
  "name": "jarvis-desktop",
  "version": "1.0.0",
  "description": "Jarvis AI Agent Platform - Desktop Application",
  "author": "Crystal Clear Solutions LLC",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.jarvis.desktop",
    "productName": "Jarvis AI",
    "copyright": "Copyright 2026 Crystal Clear Solutions LLC",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "tray.js",
      "updater.js",
      "icons/**/*"
    ],
    "extraResources": [
      {
        "from": "../api",
        "to": "api",
        "filter": ["**/*", "!**/__pycache__/**", "!**/data/**"]
      },
      {
        "from": "../jarvis",
        "to": "jarvis",
        "filter": ["**/*", "!**/__pycache__/**"]
      },
      {
        "from": "../config.yaml",
        "to": "config.yaml"
      },
      {
        "from": "../plugins",
        "to": "plugins",
        "filter": ["**/*", "!**/__pycache__/**"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Jarvis AI",
      "installerSidebar": null,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icons/icon.png",
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "Yonchforget1",
      "repo": "jarvis"
    }
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0"
  }
}
