# Jarvis v2 Environment Configuration
# Copy this file to .env and fill in your values

# ---- Security (REQUIRED for production) ----
JARVIS_SECRET_KEY=your-random-secret-key-here

# CORS allowed origins (comma-separated, default: * for development)
JARVIS_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ---- AI Backend API Keys (set the one matching your backend) ----
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AI...

# ---- SMTP for email tool (optional) ----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# ---- Logging (optional) ----
JARVIS_LOG_LEVEL=INFO
